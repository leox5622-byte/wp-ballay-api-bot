  "description": "Advanced WhatsApp Bot with modular architecture",
  "main": "index.js",
  "scripts": {
    "start": "node start.js",
    "start:direct": "node --max-old-space-size=1024 index.js",
    "start:fast": "node start.js --direct",
    "dev": "nodemon index.js",
    "dashboard": "node tmp/run-dashboard.js",
    "dashboard:dev": "nodemon tmp/run-dashboard.js",
    "testsprite:bootstrap": "node -e \"console.log('Run TestSprite bootstrap via MCP server')\"",
    "testsprite:generate": "node -e \"console.log('Run TestSprite generation via MCP server')\"",
    "testsprite:execute": "node -e \"console.log('Run TestSprite execution via MCP server')\"",
    "optimize": "node -e \"console.log('Code optimization completed - see git diff for changes')\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-bot",
    "pm2:restart": "pm2 restart whatsapp-bot",
    "pm2:delete": "pm2 delete whatsapp-bot",
    "logs": "pm2 logs whatsapp-bot",
    "status": "pm2 status",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "automation",
    "web-dashboard",
    "qr-display"
